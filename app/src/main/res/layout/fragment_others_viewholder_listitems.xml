<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_others_viewholder_listitems_image"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_others_viewholder_listitems_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="1dp"
                android:layout_weight="4"
                android:text="Decorate Your Dream Home And We'll Tell You What Kind Of Ghost Is Haunting It"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_others_viewholder_listitems_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="author"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/fragment_others_viewholder_listitems_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="date"
                    android:textColor="#8b8878"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"/>

    <View
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="#d3d3d3"/>

</LinearLayout>